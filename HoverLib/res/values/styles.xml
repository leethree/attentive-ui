<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="HoverTheme.Holo.Light" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/HoverButton</item>
        <item name="android:imageButtonStyle">@style/HoverImageButton</item>
        <item name="android:actionBarTabStyle">@style/HoverActionBarTabStyle</item>
        <item name="android:selectableItemBackground">@drawable/hoveritem_background_holo_light</item>
        <item name="android:overScrollMode">never</item>
    </style>
    
    <!-- style for buttons -->
    <style name="HoverButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/hoverbtn_default_holo_light</item>
    </style>
    
    <!-- style for image buttons -->
    <style name="HoverImageButton" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/hoverbtn_default_holo_light</item>
    </style>
    
    <!-- style for the tabs -->
	<style name="HoverActionBarTabStyle" parent="android:Widget.Holo.Light.ActionBar.TabView">
	    <item name="android:background">@drawable/hovertab_indicator_ab_holo</item>
	</style>

</resources>