<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.hku.cs.srli.factfinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:name="hk.hku.cs.srli.factfinder.FFApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoHover" >
        <activity
            android:name="hk.hku.cs.srli.factfinder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hk.hku.cs.srli.factfinder.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="hk.hku.cs.srli.factfinder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hk.hku.cs.srli.factfinder.MainActivity" />
        </activity>
        <activity
            android:name="hk.hku.cs.srli.factfinder.OrderFragment"
            android:label="@string/title_activity_order"
            android:parentActivityName="hk.hku.cs.srli.factfinder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hk.hku.cs.srli.factfinder.MainActivity" />
        </activity>
        <activity
            android:name="hk.hku.cs.srli.factfinder.TestActivity"
            android:label="@string/title_activity_test" android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>