<hk.hku.cs.srli.widget.HoverFrame
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:rightEdgeGlow="true"
	app:rightEdgeColor="@color/scrollable_edge" >

	<hk.hku.cs.srli.factfinder.ui.FFSlidingPaneLayout
	    
	    android:id="@+id/slidingPaneLayout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    tools:context=".MainActivity" >
	      
		<FrameLayout
		    android:layout_width="400dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="left" >	    
	    
		    <fragment
		        android:name="hk.hku.cs.srli.factfinder.OrderFragment"
		        android:id="@+id/left_pane"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" />
	    
		    <hk.hku.cs.srli.widget.HoverButton
		        android:id="@+id/invisibleButton"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="?android:attr/selectableItemBackground"
		        android:contentDescription="Tap to see your order" />
		    
		</FrameLayout>
	
	    <hk.hku.cs.srli.widget.HoverFrame
	        android:id="@+id/right_pane"
	       	android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="200dp"
			app:leftEdgeGlow="true"
			app:rightEdgeGlow="true"
			app:leftEdgeColor="@color/overscroll_edge"
			app:rightEdgeColor="@color/scrollable_edge" >
	    
			<android.support.v4.view.ViewPager
			    android:id="@+id/pager"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" />
			
		</hk.hku.cs.srli.widget.HoverFrame>
	</hk.hku.cs.srli.factfinder.ui.FFSlidingPaneLayout>
</hk.hku.cs.srli.widget.HoverFrame>