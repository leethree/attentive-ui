<?xml version="1.0" encoding="utf-8"?>
<hk.hku.cs.srli.widget.HoverFrame xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hoveritem_background_holo_light" >

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_column_width"
        android:contentDescription="thumbnail"
        android:cropToPadding="true"
        android:padding="@dimen/grid_gutter"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />

    <hk.hku.cs.srli.widget.HoverDiscloseLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/item_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/grid_gutter"
            android:background="#80000000"
            android:padding="@dimen/grid_gutter"
            android:text="TextView"
            android:textColor="@android:color/primary_text_dark" />
        
        <hk.hku.cs.srli.factfinder.ui.PriceButton
            android:id="@+id/item_text_price"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/grid_gutter"
            android:background="@drawable/hoveritem_background_holo_light"
            android:contentDescription="Quick add"
            android:padding="@dimen/grid_gutter"
            android:shadowColor="@android:color/background_light"
            android:shadowRadius="15"
            android:text="$0.00"
            android:textColor="@android:color/primary_text_light" />
        
    </hk.hku.cs.srli.widget.HoverDiscloseLayout>

</hk.hku.cs.srli.widget.HoverFrame>