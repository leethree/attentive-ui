<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".OrderFragment" >

    <LinearLayout
        android:id="@+id/orderFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/abs__background_holo_light"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textOrderSum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Total: 0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <hk.hku.cs.srli.widget.HoverImageButton
            android:id="@+id/buttonOrder"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Submit order"
            android:text="Submit order" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/orderFooter"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textOrderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Your order:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/orderListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:listitem="@android:layout/simple_list_item_2" >

        </ListView>

        <TextView
            android:id="@+id/textEmpty"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="There is no item."
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <hk.hku.cs.srli.widget.HoverImageButton
        android:id="@+id/invisibleButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hoveritem_background_holo_light"
        android:contentDescription="Tap to review your order"
        android:src="@android:color/transparent" />

</RelativeLayout>