<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="200dp" >

    <hk.hku.cs.srli.widget.HoverFrame
        android:id="@+id/button_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:leftEdgeColor="@color/removable_edge"
        app:leftEdgeGlow="true"
        app:rightEdgeColor="@color/removable_edge"
        app:rightEdgeGlow="true" >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_orange_light"
            android:gravity="center"
            android:text="swipe to remove"
            android:textColor="@android:color/primary_text_dark"
            android:textAppearance="?android:listSeparatorTextViewStyle" />
	    
        <hk.hku.cs.srli.widget.HoverButton
            android:id="@+id/button"
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="20dp"
			android:background="@android:color/background_light"
            android:text="Look at me!"
            android:textStyle="italic"
            android:textColor="@android:color/tertiary_text_light"
            android:textAppearance="?android:textAppearanceLarge" />
        
    </hk.hku.cs.srli.widget.HoverFrame>

</RelativeLayout>