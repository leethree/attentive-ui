<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hk.hku.cs.srli.monkeydemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hk.hku.cs.srli.monkeydemo.TypeListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hk.hku.cs.srli.monkeydemo.TypeDetailActivity"
            android:label="@string/title_type_detail"
            android:parentActivityName=".TypeListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TypeListActivity" />
        </activity>
    </application>

</manifest>